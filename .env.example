# === Core Paths ===
RAW_ROOT=H:/DataLake/ai4hsse-raw
CLEAN_ROOT=H:/DataWarehouse/ai4hsse-clean
LOG_ROOT=${PWD}\logs

# === Runtime ===
OFFLINE_MODE=true
GPU_ACCELERATION=false

# === Models ===
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L12-v2
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# === API ===
API_HOST=127.0.0.1
API_PORT=8000

# === Pipeline ===
PIPELINE_RUN_TIMEOUT=3600
PIPELINE_RUN_MAX_RETRIES=2
PIPELINE_RUN_BACKOFF=5
FILE_STABLE_SECONDS=2
MAX_FILE_SIZE_MB=100
ALLOWED_EXTENSIONS=[".pdf", ".docx", ".doc", ".xlsx", ".xls", ".txt", ".csv", ".pptx", ".ppt", ".md", ".msg", ".eml"]
HASH_CHUNK_BYTES=1048576
VOICE_CMD_CONFIDENCE=0.8
WAKE_DEBOUNCE_S=1.0
ML_WORKER_INTERVAL_HOURS=6
HEALTH_POLL_SECONDS=30
